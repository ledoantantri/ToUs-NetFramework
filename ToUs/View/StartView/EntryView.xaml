<UserControl x:Class="ToUs.View.StartView.EntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToUs.View.StartView"
             mc:Ignorable="d" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             xmlns:customcontrol="clr-namespace:ToUs.Resources.CustomControl"
             xmlns:viewmodel="clr-namespace:ToUs.ViewModel.StartViewModel"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             FontFamily="Segoe UI">

    <UserControl.DataContext>
        <viewmodel:EntryViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Storyboard x:Key="AniInformation">

        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <!--This is the main EntryView-->
        <Border x:Name="Entry"
                Width="1920"
                Height="1080"
                CornerRadius="30"
                Background="#665D8C">

            <Grid>

                <!--Define Grid Row & Height-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <!--CLOSE-->
                <Grid>
                    <customcontrol:PanelControlBar x:Name="PnlControlBarWhite"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Panel.ZIndex="1000"
                                                   Margin="1808,17,0,0"/>
                </Grid>

                <!--LOGO-->
                <Grid Name="Logo">
                    <!--LogoTitle-->
                    <TextBlock x:Name="LogoTitle" 
                           Foreground="#F2AEBB" 
                           
                           FontSize="72"
                           FontWeight="Bold"
                           Margin="878,62"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top">
                    ToUs
                    </TextBlock>

                    <!--LogoSubtile-->
                    <TextBlock x:Name="LogoSubtitle" 
                           Foreground="#EEEEEE"
                           FontSize="27"
                           FontWeight="Regular"
                           Margin="742,147"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top">
                    Timetable organizer for UIT Students
                    </TextBlock>
                </Grid>


                <!--USER GUIDE-->
                <Grid Name="User_Guide">
                    <!--Stage 1-->
                    <!--Image 1-->
                    <Ellipse x:Name="Img_01"
                             Fill="#D9D9D9"
                             Width="168.75"
                             Height="168.75"
                             Margin="289,344"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top">
                    </Ellipse>

                    <!--Number 1-->
                    <Ellipse x:Name="Num_1"
                             Fill="#D9D9D9"                            
                             Width="42.19"
                             Height="42.19"
                             Margin="352,525.25"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top">
                    </Ellipse>

                    <TextBlock Text="1"
                               FontWeight="Bold"
                               Foreground="#665D8C"
                               FontSize="33.75"
                               Margin="363.25,523"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top">
                    </TextBlock>

                    <!--Text 1-->
                    <TextBlock x:Name="Txt_01"
                               Foreground="#D9D9D9"
                               FontSize="28.5"
                               Margin="290,579.5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top">
                    <Italic> Chọn <Bold> Học kỳ </Bold> </Italic>
                    </TextBlock>

                    <!--Stage 2-->
                    <!--Image 2-->
                    <Ellipse x:Name="Img_02"
                             Fill="#D9D9D9"
                             Width="168.75"
                             Height="168.75"
                             Margin="889,344"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top">
                    </Ellipse>

                    <!--Number 2-->
                    <Ellipse x:Name="Num_02"
                             Fill="#D9D9D9"                            
                             Width="42.19"
                             Height="42.19"
                             Margin="953,525.25"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top">
                    </Ellipse>

                    <TextBlock Text="2"
                               FontWeight="Bold"
                               Foreground="#665D8C"
                               FontSize="33.75"
                               Margin="964.25,523"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top">
                    </TextBlock>
                    <!--Text 2-->
                    <TextBlock x:Name="Txt_02"
                               Foreground="#D9D9D9"
                               FontSize="28.5"
                               Margin="784,579.5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top">
                    <Italic> Chọn <Bold> Mã lớp học </Bold> mong muốn </Italic>
                    </TextBlock>

                    <!--Stage 3-->
                    <!--Image 3-->
                    <Ellipse x:Name="Img_03"
                             Fill="#D9D9D9"
                             Width="168.75"
                             Height="168.75"
                             Margin="1489,344"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top">
                    </Ellipse>

                    <!--Number 3-->
                    <Ellipse x:Name="Num_03"
                             Fill="#D9D9D9"                            
                             Width="42.19"
                             Height="42.19"
                             Margin="1552,525.25"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top">
                    </Ellipse>

                    <TextBlock Text="3"
                               FontWeight="Bold"
                               Foreground="#665D8C"
                               FontSize="33.75"
                               Margin="1563.25,523"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top">
                    </TextBlock>
                    <!--Text 3-->
                    <TextBlock x:Name="Stage_03"
                               Foreground="#D9D9D9"
                               FontSize="28.5"
                               Margin="1396,579.5"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top">
                    <Italic> Xem <Bold> Thời khóa biểu </Bold> đã tạo! </Italic>
                    </TextBlock>
                </Grid>

                <!--DASH LINE-->
                <Grid Name="Dash_Line">
                    <Line Name="Line1" 
                          Width="380"
                          X1="0"
                          Y1="0"
                          X2="380"
                          Y2="0"
                          Margin="483,428.25"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Stroke="#D9D9D9"
                          StrokeThickness="3.75"
                          StrokeDashArray="3.75">
                    </Line>

                    <Line Name="Line2" 
                          Width="380"
                          X1="0"
                          Y1="0"
                          X2="380"
                          Y2="0"
                          Margin="1086.12,428.75"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Stroke="#D9D9D9"
                          StrokeThickness="3.75"
                          StrokeDashArray="3.75">
                    </Line>
                </Grid>

                <!--ICON ABOUT US-->
                <Grid Name="Icons">
                    <Button x:Name="AboutUs"
                            Padding="0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Width="40"
                            Height="40"
                            Margin="80,102"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">

                        <Icon:PackIconMaterial Kind="InformationOutline"
                                               Foreground="#D9D9D9"
                                               Width="40"
                                               Height="40">
                        </Icon:PackIconMaterial>

                        <Button.Triggers>

                            <EventTrigger RoutedEvent="Button.Click">

                                <BeginStoryboard>

                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="about_us" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                                            <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="100"/>
                                        </DoubleAnimationUsingKeyFrames>

                                    </Storyboard>

                                </BeginStoryboard>

                            </EventTrigger>

                        </Button.Triggers>

                    </Button>

                    <Button x:Name="LanguageSwitch" 
                            Padding="0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Width="40"
                            Height="40"
                            Margin="140,102"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                        <Icon:PackIconMaterial Kind="Earth"
                                               Foreground="#D9D9D9"
                                               Width="40"
                                               Height="40">
                        </Icon:PackIconMaterial>
                    </Button>


                    <Button x:Name="LightDarkThemeSwitch" 
                            Padding="0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Width="40"
                            Height="40"
                            Margin="200,102"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                        <Icon:PackIconMaterial Kind="ThemeLightDark"
                                               Foreground="#D9D9D9"
                                               Width="40"
                                               Height="40">
                        </Icon:PackIconMaterial>
                    </Button>

                </Grid>



            </Grid>
        </Border>

        <!--When Click i icon, this exists-->
        <Border x:Name="about_us" 
                Width="1760"
                Height="800"
                Panel.ZIndex="11"
                CornerRadius="30"
                Background="#F5F5F5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="1000"/>
                </TransformGroup>
            </Border.RenderTransform>



            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

                <Button x:Name="NavigateToEntryView"
                        Panel.ZIndex="112"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Width="230.25"
                            Height="60"
                            Margin="1360,0,0,0"
                            Padding="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Stretch">

                    <Grid Grid.Column="2" Margin="32,0,-32,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <!--ICON BACK-->
                        <Icon:PackIconMaterial Grid.Column="0"
                                                   Kind="ArrowLeft"
                                                   Width="28"
                                                   Height="25"
                                                   Foreground="#665D8C"
                                                   Margin="10 8 0 0"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center">

                        </Icon:PackIconMaterial>

                        <!--TEXT BACK-->
                        <TextBlock Grid.Column="1" 
                                       Foreground="#665D8C"
                                       Text="Quay lại"
                                       FontSize="32"
                                       FontWeight="Regular"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center">

                        </TextBlock>
                    </Grid>

                    <Button.Triggers>

                        <EventTrigger RoutedEvent="Button.Click">

                            <BeginStoryboard>

                                <Storyboard>

                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="about_us" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                                        <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1000"/>
                                    </DoubleAnimationUsingKeyFrames>

                                </Storyboard>

                            </BeginStoryboard>

                        </EventTrigger>

                    </Button.Triggers>

                </Button>



                <TextBlock Width="1600"
                    Height="700"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    TextWrapping="Wrap"
