<UserControl x:Class="ToUs.View.PreviewView.PreviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToUs.View.PreviewView"
             xmlns:viewmodel="clr-namespace:ToUs.ViewModel.PreviewViewModel"
             mc:Ignorable="d" 
             Style="{StaticResource Page_Style}"
             xmlns:customcontrol="clr-namespace:ToUs.Resources.CustomControl"
             d:DesignWidth="2500"
             HorizontalAlignment="Left"
             SnapsToDevicePixels="True">

    <UserControl.DataContext>
        <viewmodel:PreviewViewModel/>
    </UserControl.DataContext>

    <Grid>

        <Grid x:Name="gridUserMode"
          Width="1740"
          HorizontalAlignment="Right"
          Height="1080">

            <Grid.RowDefinitions>

                <RowDefinition Height="0.21*"/>
                <RowDefinition Height="0.79*"/>


            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Bottom">

                <TextBlock Style="{StaticResource TextHeader}"
                               Text="Xem thời khóa biểu"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               SnapsToDevicePixels="True"/>

            </StackPanel>

            <Border Grid.Row="1"
                                 Background="{StaticResource PrimaryColor}"
                                 CornerRadius="30">
                <Grid Margin="45 28 45 45">

                    <Grid.RowDefinitions>

                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="10*"/>

                    </Grid.RowDefinitions>

                    <TextBlock Style="{StaticResource txtPrimary}"
                               Text="demo tkb12345678910 (đây là tên TKB)"
                               FontSize="25"
                               Height="33"
                               Grid.Row="0"
                               VerticalAlignment="Top"
                               FontStyle="Italic"
                               Foreground="{StaticResource FifthPrimaryColor}"/>

                    <Grid Grid.Row="1"
                          MaxWidth="1560"
                          
                          VerticalAlignment="Top"
                          Height="40">

                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            

                        </Grid.ColumnDefinitions>

                        <TextBlock FontSize="30"
                                   Foreground="{StaticResource PrimaryForegroundColor}"
                                   Grid.Column="1"
                                   Text="Thứ hai"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Stretch"/>

                        <TextBlock FontSize="30"
                                   Foreground="{StaticResource PrimaryForegroundColor}"
                                   Grid.Column="2"
                                   Text="Thứ ba"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>

                        <TextBlock FontSize="30"
                                   Foreground="{StaticResource PrimaryForegroundColor}"
                                   Grid.Column="3"
                                   Text="Thứ tư"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>

                        <TextBlock FontSize="30"
                                   Foreground="{StaticResource PrimaryForegroundColor}"
                                   Grid.Column="4"
                                   Text="Thứ năm"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>

                        <TextBlock FontSize="30"
                                   Foreground="{StaticResource PrimaryForegroundColor}"
                                   Grid.Column="5"
                                   Text="Thứ sáu"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>

                        <TextBlock FontSize="30"
                                   Foreground="{StaticResource PrimaryForegroundColor}"
                                   Grid.Column="6"
                                   Text="Thứ bảy"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>

                    </Grid>

                    <Border Background="#7FFFFFFF"
                            CornerRadius="15"
                            Grid.Row="2">

                        <Grid MaxWidth="1560"
                          x:Name="grid"
                          Background="Transparent"
                          MaxHeight="674"
                          Margin="40,20,40,20">

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="0.8*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>

                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>

                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>

                            </Grid.RowDefinitions>

                            <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center">

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="Tiết 1"/>

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="(7:30-8:15)"/>

                            </StackPanel>

                            <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Row="1"
                                    Grid.Column="0">

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="Tiết 2"/>

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="(8:15-9:00)"/>

                            </StackPanel>

                            <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Row="2"
                                    Grid.Column="0">

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="Tiết 3"/>

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="(9:00-9:45)"/>

                            </StackPanel>

                            <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Row="3"
                                    Grid.Column="0">

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="Tiết 4"/>

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="(10:00-10:45)"/>

                            </StackPanel>

                            <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Row="4"
                                    Grid.Column="0">

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="Tiết 5"/>

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="(10:45-11:30)"/>

                            </StackPanel>

                            <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Row="5"
                                    Grid.Column="0">

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="Tiết 6"/>

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="(13:00-13:45)"/>

                            </StackPanel>

                            <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Row="6"
                                    Grid.Column="0">

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="Tiết 7"/>

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="(13:45-14:30)"/>

                            </StackPanel>

                            <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Row="7"
                                    Grid.Column="0">

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="Tiết 8"/>

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="(14:30-15:15)"/>

                            </StackPanel>

                            <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Row="8"
                                    Grid.Column="0">

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="Tiết 9"/>

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="(15:15-16:00)"/>

                            </StackPanel>

                            <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Row="9"
                                    Grid.Column="0">

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="Tiết 10"/>

                                <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                       Text="(16:00-17:00)"/>

                            </StackPanel>




                        </Grid>


                    </Border>

                </Grid>

                

            </Border>
            
        </Grid>

    </Grid>
    
</UserControl>
