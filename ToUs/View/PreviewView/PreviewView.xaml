                                        <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                            Text="Tiết 10"/>

                                        <TextBlock Style="{StaticResource SecondPrimarytxtBlock}"
                                            Text="(16:00-17:00)"/>

                                    </StackPanel>




                                </Grid>


                            </Border>


                        </StackPanel>


                    </Grid>

                </Grid>

            </Border>

        </Grid>

    </Grid>

</UserControl>
