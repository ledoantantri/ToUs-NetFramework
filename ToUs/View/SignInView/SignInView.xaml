<Window x:Class="ToUs.View.SignInView.SignInView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        xmlns:customcontrol="clr-namespace:ToUs.Resources.CustomControl"
        xmlns:viewmodel="clr-namespace:ToUs.ViewModel.SignInViewModel"
        xmlns:local="clr-namespace:ToUs.View.SignInView"
        mc:Ignorable="d"
        Title="SignInView" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI">
    
    <!--<Window.DataContext>
        <viewmodel:SignInViewModel/>
    </Window.DataContext>-->

    <Window.Resources>
        <ScaleTransform x:Key="windowScaleTransform"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Border x:Name="Background"
                Width="1920"
                Height="1080"
                CornerRadius="30"
                LayoutTransform="{StaticResource windowScaleTransform}"
                Background="#665D8C">

            <Grid>

                <!--Define Grid Row & Height-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <!--LOGO-->
                <Grid x:Name="Big_Logo">
                    <TextBlock Name="Logo"
                               Text="ToUs"
                               FontSize="144"
                               FontWeight="Bold"
                               Foreground="#F2AEBB"
                               Margin="328,381"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top">
                        
                    </TextBlock>
                </Grid>
                
                <!--SUB BACKGROUND-->
                <Grid x:Name="Sub_Background">
                    <Rectangle Name="SubBackground"
                               Fill="#F5F5F5"
                               Width="686"
                               Height="1080"
                               Margin="984,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top">
                        
                    </Rectangle>
                </Grid>

                <Grid>
                    <Button x:Name="Back"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Width="230.25"
                            Height="60"
                            Margin="80,867"
                            Padding="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Stretch">
                        
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <Icon:PackIconMaterial Grid.Column="0"
                                                   Kind="ArrowLeft"
                                                   Width="31.5"
                                                   Height="31.5"
                                                   Foreground="#F5F5F5"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center">

                            </Icon:PackIconMaterial>

                            <TextBlock Grid.Column="1" 
                                       Foreground="#F5F5F5"
                                       Text="Quay lại"
                                       FontSize="45"
                                       FontWeight="Regular"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center">

                            </TextBlock>
                           
                        </Grid>
                        
                        
                        
                    </Button>
                </Grid>
                
            </Grid>
        </Border>

        
    </Grid>
</Window>
