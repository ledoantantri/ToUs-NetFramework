<UserControl
    x:Class="ToUs.Resources.CustomControl.BoxTimetableDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ToUs.Resources.CustomControl"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    d:DesignHeight="316"
    d:DesignWidth="215"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <Border
        x:Name="card"
        Background="{StaticResource FifthPrimaryColor}"
        CornerRadius="10">
        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="auto" />
                <RowDefinition x:Name="SecondGridRow" Height="auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Width="{Binding ActualWidth, ElementName=card}"
                Margin="0,4,0,0"
                Padding="0,0,0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderBrush="#D13EDC"
                BorderThickness="0,0,0,1">

                <StackPanel Width="156">

                    <Border
                        Width="auto"
                        Height="20"
                        Padding="10,0,10,0"
                        HorizontalAlignment="Left"
                        Background="{StaticResource PrimaryColor}"
                        CornerRadius="10">

                        <TextBlock
                            x:Name="ClassId"
                            FontSize="14"
                            Foreground="{StaticResource FifthPrimaryColor}"
                            Style="{StaticResource SecondPrimarytxtBlock}"
                            Text="IT005.N12.PMCL - VN" />
                    </Border>

                    <StackPanel Margin="0,6,0,0" Orientation="Horizontal">

                        <Border
                            Width="auto"
                            Padding="10,0,10,0"
                            Background="{StaticResource PrimaryColor}"
                            CornerRadius="10">

                            <StackPanel Orientation="Horizontal">

                                <materialDesign:PackIcon
                                    Width="18"
                                    Height="20"
                                    VerticalAlignment="Center"
                                    Foreground="{StaticResource FifthPrimaryColor}"
                                    Kind="Location" />

                                <TextBlock
                                    x:Name="Room"
                                    FontSize="14"
                                    Foreground="{StaticResource FifthPrimaryColor}"
                                    Style="{StaticResource SecondPrimarytxtBlock}"
                                    Text="C206" />
                            </StackPanel>
                        </Border>

                        <materialDesign:PackIcon
                            Width="85"
                            Height="20"
                            Margin="0,0,10,0"
                            Foreground="#9C7BD5"
                            Kind="Teacher" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border
                Grid.Row="1"
                Width="{Binding ActualWidth, ElementName=card}"
                Padding="0,0,0,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#D13EDC"
                BorderThickness="0,0,0,1">

                <StackPanel>

                    <TextBlock
                        x:Name="TeacherName"
                        Width="{Binding ActualWidth, ElementName=card}"
                        Height="18"
                        Margin="0,4,0,0"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource ThirdPrimaryColor}"
                        Style="{StaticResource SecondPrimarytxtBlock}"
                        Text="Đặng Lê Bảo Chương" />

                    <TextBlock
                        x:Name="SubjectName"
                        FontSize="12"
                        Foreground="{StaticResource ThirdPrimaryColor}"
                        Style="{StaticResource SecondPrimarytxtBlock}"
                        Text="Phát Triển Ứng Dụng Đa Phương Tiện Trên Thiết Bị Di Động"
                        TextAlignment="Center" />
                </StackPanel>
            </Border>

            <Border
                Grid.Row="2"
                Width="180"
                Height="45"
                MinWidth="0"
                Margin="10,0,10,25"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Background="#242531"
                CornerRadius="15">

                <StackPanel Orientation="Horizontal">

                    <Icon:PackIconMaterial
                        Width="23"
                        Height="23"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource FifthPrimaryColor}"
                        Kind="Timetable" />

                    <StackPanel Margin="8,0,0,0" VerticalAlignment="Center">

                        <TextBlock>

                            <Run Style="{StaticResource runText}" Text="From: " />
                            <Run
                                x:Name="BeginDate"
                                Style="{StaticResource runText}"
                                Text="12/24/2022" />
                        </TextBlock>

                        <TextBlock>

                            <Run Style="{StaticResource runText}" Text="To: " />
                            <Run
                                x:Name="EndDate"
                                Style="{StaticResource runText}"
                                Text="01/02/2023" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>